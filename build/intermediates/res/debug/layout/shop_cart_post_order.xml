<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
         <include
        layout="@layout/x_bar_title" 
        android:id="@+id/title"/>
     <ScrollView 
         android:layout_below="@id/title"
         android:id="@+id/sv_cart_ordermgs"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical" >
      
    <ListView 
        android:id="@+id/lv_cart_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null">
    </ListView>
      <LinearLayout
        android:layout_marginTop="10dp" 
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ll_seleted_address"
        android:background="@drawable/address_background"
        android:orientation="horizontal">
         <TextView 
         android:id="@+id/tv_address"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="40dp"
         android:text="请新建收货地址以确保商品顺利到达"
         android:gravity="center"
         android:textSize="12sp"
         />
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:src="@drawable/brand_more"/>
    </LinearLayout>
     <LinearLayout 
        android:layout_marginTop="10dp" 
        android:layout_marginBottom="10dp"
        android:paddingLeft="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_detail_address"
        android:visibility="gone"
        android:background="@drawable/address_background"
        android:orientation="vertical">
         <TextView 
             android:id="@+id/tv_reveive_msg"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="收货信息"
             android:textSize="15sp"
             android:layout_marginTop="13dp"
             android:textColor="#323232"
             android:layout_marginLeft="10dp"/>
          <TextView 
              android:id="@+id/tv_show_name_and_tell"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="姓名电话"
             android:layout_marginTop="13dp"
             android:textColor="#666666"
             android:layout_marginLeft="10dp"
             android:textSize="12sp"/>
         <TextView 
             android:id="@+id/tv_show_add"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="地址"
             android:textColor="#666666"
             android:layout_marginLeft="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginTop="10dp"
             android:textSize="12sp"/>
         
     </LinearLayout>
      <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="45dp"
           android:background="@drawable/white_border"
           android:id="@+id/ll_youhuiquan"
           android:orientation="horizontal">
         <TextView android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             android:text="选择使用优惠券"
             android:textColor="#9b9b9b"
             android:gravity="center_vertical"
             android:layout_marginLeft="20dp"
             />
         <TextView
             android:id="@+id/tv_youhuimoney"
             android:layout_width="wrap_content"
             android:layout_height="match_parent" 
             android:gravity="center_vertical"
             android:text="优惠券金额"
             android:textColor="#9b9b9b"
             android:layout_marginRight="20dp"/>
         <ImageView 
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:src="@drawable/brand_more"
             android:layout_marginRight="20dp"
             />
     </LinearLayout>
      <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="45dp"
           android:background="@drawable/white_border"
           android:orientation="horizontal">
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_marginLeft="20dp"
             android:text="团币" 
             android:gravity="center_vertical"
             android:textColor="@color/default_red"
             android:textSize="14sp"/>
         <TextView
             android:id="@+id/tv_tuanbi_pay"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             android:text="可用0团币" 
             android:textColor="#9b9b9b"
             android:gravity="center"/>
         <CheckBox 
             android:id="@+id/cb_selet_tuanbi"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:checked="false"
             android:gravity="center_vertical"
             style="@style/MyCheckBox"/>
         </LinearLayout>
     
  </LinearLayout>
  </ScrollView>
  <LinearLayout 
      android:id="@+id/ll_buttom"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:orientation="horizontal"
      android:background="@drawable/white_border"
      android:layout_alignParentBottom="true"
      >
      <TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="共计："
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="15dp"/>
      <TextView 
          android:id="@+id/cart_sum_money"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="￥0.00"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"
          android:textColor="@color/default_red"/>
      <Button 
          android:id="@+id/bt_post_order"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:text="提交订单"
          android:paddingLeft="20dp"
          android:background="@drawable/delete_bg"
          android:drawableLeft="@drawable/buyatonce_left"
          android:textColor="@color/white"/>
  </LinearLayout>
</RelativeLayout>
