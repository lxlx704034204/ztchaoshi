<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#787878"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            android:text="123456" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/right_arraw" />

        <TextView
            android:id="@+id/tv_orderstatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="待付款" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/fl_upay_show"
            android:layout_width="match_parent"
            android:layout_height="93dp" >
         
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/ll_img_album"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone" >
                </LinearLayout>
            </HorizontalScrollView>

            <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="93dp"
                    android:layout_weight="1"
                    android:background="@drawable/loader_image_befor"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="93dp"
                    android:layout_weight="1"
                    android:background="@drawable/loader_image_befor"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />
            </LinearLayout>
            -->

            <LinearLayout
                android:id="@+id/ll_only_one_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_img_one"
                    android:layout_width="0dp"
                    android:layout_height="93dp"
                    android:layout_weight="1"
                    android:background="@drawable/loader_image_befor"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" >

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:lines="2"
                        android:text="【亮银首饰】观音本命年酒红石榴石手链女式首饰品水晶多层圈韩版名族风手串"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_product_name"
                        android:layout_below="@id/tv_product_name"
                        android:layout_marginTop="10dp"
                        android:text="￥0"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_buynum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_product_price"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="X1"
                        android:textSize="11dp" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="15dp" >

            <TextView
                android:id="@+id/tv_should_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="实付款：￥0" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:background="#fca611"
                android:padding="7dp"
                android:text="付款"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_concel_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="#fca611"
                android:padding="7dp"
                android:text="取消订单"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/workspance/ztchaoshi/res/layout/unpay_adapter_l.xml -->