<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <include layout="@layout/login_title" /> 
   <LinearLayout 
       android:id="@+id/first"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:visibility="visible">
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:paddingTop="30dp"
        android:orientation="horizontal"
        android:paddingBottom="15dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号      "
            android:textSize="13sp"
            android:textColor="#2d2c2c"/>
        <EditText 
             android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:textSize="14sp"
            android:background="@null"/>
        
         <ImageView android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8e8e8e"/>
    </LinearLayout>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:background="@color/default_red"/>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:paddingTop="30dp"
        android:orientation="horizontal"
        android:paddingBottom="15dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码     "
            android:textSize="13sp"
            android:textColor="#2d2c2c"/>
        <EditText 
            android:id="@+id/mobyzm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请在120秒内输入验证码"
            android:textSize="13sp"
            android:background="@null"/>
        <Button 
            android:id="@+id/get_mobyzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:onClick="onClickGetYzmBtn"
            android:textColor="@color/default_red"
            android:background="@null"/>
        
    </LinearLayout>
     <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:background="@color/default_red"/>
      <Button 
         android:id="@+id/next"
         android:layout_width="match_parent"
         android:layout_height="43dp"
         android:background="@color/default_red"
         android:text="下一步"
         android:textColor="@color/white"
         android:textSize="20sp"
         android:gravity="center"
         android:onClick="onClickNextBtn"
         android:layout_marginLeft="21dp"
         android:layout_marginRight="21dp"
         android:layout_marginTop="43dp"/>
</LinearLayout>
<LinearLayout 
       android:id="@+id/second"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:visibility="gone">
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:paddingTop="30dp"
        android:orientation="horizontal"
        android:paddingBottom="15dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置密码      "
            android:textSize="13sp"
            android:textColor="#2d2c2c"/>
        <EditText
            android:id="@+id/password" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请设置不少于六位数的密码"
            android:password="true"
            android:textSize="14sp"
            android:background="@null"/>
        
         <ImageView android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8e8e8e"/>
    </LinearLayout>
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:background="@color/default_red"/>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:paddingTop="30dp"
        android:orientation="horizontal"
        android:paddingBottom="15dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码     "
            android:textSize="13sp"
            android:textColor="#2d2c2c"/>
        <EditText 
            android:id="@+id/repeat_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"
            android:password="true"
            android:textSize="13sp"
            android:background="@null"/>
    </LinearLayout>
     <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:background="@color/default_red"/>
      <Button 
         android:id="@+id/register"
         android:layout_width="match_parent"
         android:layout_height="43dp"
         android:background="@color/default_red"
         android:text="注册"
         android:textColor="@color/white"
         android:textSize="20sp"
         android:gravity="center"
         android:onClick="onClickRegisterBtn"
         android:layout_marginLeft="21dp"
         android:layout_marginRight="21dp"
         android:layout_marginTop="43dp"/>
    
</LinearLayout>
 <TextView
         android:id="@+id/tv_errmsg" 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="@color/default_red"
         android:textSize="14sp"
         android:gravity="center_horizontal"
         android:layout_marginTop="30dp"/>
</LinearLayout>
